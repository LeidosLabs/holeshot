#version 400 core

layout(location = 0) in vec2 vertexPosition;
layout(location = 1) in vec2 texturePosition;
uniform mat4 pMat;
uniform mat4 mvMat;

out VertexData {
   vec2 texturePosition;
} vs_out;

void main() {
    vs_out.texturePosition = texturePosition;
    gl_Position = pMat * mvMat * vec4(vertexPosition.xy, 0.0, 1.0);
}